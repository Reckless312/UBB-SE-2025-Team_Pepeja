<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="News.PostPreviewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:News"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="400">

    <Grid
        BorderBrush="#D94C8A"
        BorderThickness="2"
        CornerRadius="15"
        Padding="16"
        Background="#FFF0F5"
        MinHeight="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid
            Grid.Row="0"
            Margin="0,0,0,12"
            Background="#FFC2D9"
            CornerRadius="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Profile Picture -->
            <Grid Grid.Column="0" Width="52" Height="40" Margin="0,0,12,0">
                <Ellipse 
                Grid.Column="0" 
                Width="40" 
                Height="40"
                Margin="0,0,12,0">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="ProfilePicture" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Grid>

            <!-- Username and Date -->
            <StackPanel Grid.Column="1">
                <TextBlock
                    Name="Username"
                    FontWeight="SemiBold"
                    FontSize="16"
                    Foreground="#D94C8A"/>
                <TextBlock
                    Name="UploadDate"
                    FontSize="12"
                    Foreground="#333333"/>
            </StackPanel>
        </Grid>

        <!-- Content Section -->
        <Grid
            Grid.Row="1"
            Height="200"
            Background="White"
            CornerRadius="10">

            <!-- WebView2 Content -->
            <WebView2 x:Name="ContentWebView" Height="200"/>

            <!-- Gradient Overlay -->
            <Rectangle
                Height="80"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Stretch">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="Transparent" Offset="0"/>
                        <GradientStop Color="#FFACC7" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>

        <!-- Interaction Buttons -->
        <Grid
            Grid.Row="3"
            Margin="0,12,0,0"
            Background="#FFACC7"
            CornerRadius="10"
            Padding="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Like Button -->
            <StackPanel
                Grid.Column="0"
                Orientation="Horizontal">
                <Button
                    BorderThickness="1"
                    Background="#FFC2D9"
                    CornerRadius="15">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            Glyph="&#xE8E1;"
                            FontSize="16"
                            Foreground="#D94C8A"/>
                        <TextBlock
                            Name="LikesCount"
                            VerticalAlignment="Center"
                            Margin="4,0,0,0"
                            Foreground="#333333"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Dislike Button -->
            <StackPanel
	            Grid.Column="1"
	            Orientation="Horizontal"
                Margin="8,0,0,0">
                <Button
                    BorderThickness="1"
                    Background="#FFC2D9"
                    CornerRadius="15">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            Glyph="&#xE8E1;"
                            FontSize="16"
                            Foreground="#D94C8A"
							RenderTransformOrigin="0.5,0.5">
                            <FontIcon.RenderTransform>
                                <ScaleTransform ScaleY="-1" />
                            </FontIcon.RenderTransform>
                        </FontIcon>
                        <TextBlock
                            Name="DislikesCount"
                            VerticalAlignment="Center"
                            Margin="4,0,0,0"
                            Foreground="#333333"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Comment Button -->
            <StackPanel
                Grid.Column="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right">
                <Button
                    BorderThickness="1"
                    Background="#FFC2D9"
                    CornerRadius="15">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            Glyph="&#xE8AF;"
                            FontSize="16"
                            Foreground="#D94C8A"/>
                        <TextBlock
                            Name="CommentsCount"
                            VerticalAlignment="Center"
                            Margin="4,0,0,0"
                            Foreground="#333333"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>