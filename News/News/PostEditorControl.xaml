<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="News.PostEditorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:News"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="700"
    d:DesignWidth="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Panel Content -->
        <Border 
            Background="#FFF0F5"
            BorderBrush="#D94C8A"
            BorderThickness="2"
            CornerRadius="15"
            Margin="40,20"
            VerticalAlignment="Stretch">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header with toggle buttons -->
                    <RowDefinition Height="*"/>
                    <!-- Content area -->
                    <RowDefinition Height="Auto"/>
                    <!-- Action button -->
                </Grid.RowDefinitions>

                <!-- Header with Toggle Buttons -->
                <Grid Grid.Row="0" Margin="32,16,32,16" Background="#FFC2D9" CornerRadius="10" Padding="16,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Profile picture -->
                        <ColumnDefinition Width="*"/>
                        <!-- Username -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Toggle buttons -->
                    </Grid.ColumnDefinitions>

                    <!-- Profile Picture -->
                    <Grid Grid.Column="0" Width="52" Height="40" Margin="0,0,12,0">
                        <Ellipse 
                            Grid.Column="0" 
                            Width="40" 
                            Height="40"
                            Margin="0,0,12,0">
                            <Ellipse.Fill>
                                <ImageBrush x:Name="ProfilePicture" Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>

                    <!-- Username and Date -->
                    <StackPanel Grid.Column="1">
                        <TextBlock 
                            Name="Username"
                            FontWeight="SemiBold"
                            FontSize="18"
                            Foreground="#D94C8A"/>
                        <TextBlock 
                            Name="CurrentDate"
                            FontSize="14"
                            Foreground="#333333"/>
                    </StackPanel>

                    <!-- Toggle Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="RawButton" 
                               Content="Raw" 
                               Click="RawButton_Click"
                               Background="#D94C8A"
                               Foreground="White"
                               Padding="12,6"
                               CornerRadius="20"
                               MinWidth="70"/>

                        <Button x:Name="PreviewButton" 
                               Content="Preview" 
                               Click="PreviewButton_Click"
                               Background="#FFACC7"
                               Foreground="#333333"
                               Padding="12,6"
                               CornerRadius="20"
                               Margin="8,0,0,0"
                               MinWidth="70"/>
                    </StackPanel>
                </Grid>

                <!-- Content Area -->
                <Grid Grid.Row="1" Margin="32,0">
                    <!-- Raw Text Editor -->
                    <TextBox x:Name="RawHtmlEditor"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             FontFamily="Consolas"
                             Padding="12"
                             MinHeight="300"
                             BorderThickness="1"
                             BorderBrush="#FFACC7"
                             Background="White"
                             Foreground="#333333"
                             Visibility="Visible"
                             PlaceholderText="Write your post here. Use HTML tags for formatting (e.g., &lt;h1&gt;Title&lt;/h1&gt;)"
                             CornerRadius="10"/>

                    <!-- Preview WebView -->
                    <WebView2 x:Name="HtmlPreview"
                             Visibility="Collapsed"/>
                </Grid>

                <!-- Action Button -->
                <Grid Grid.Row="2" Margin="32,16,32,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Action Button (Post/Save) -->
                    <Button 
                        x:Name="UploadButton"
                        Click="UploadButton_Click"
                        Grid.Column="1" 
                        Content="Upload Post"
                        Background="#D94C8A"
                        Foreground="White"
                        Padding="16,8"
                        CornerRadius="20"
                        MinWidth="100"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl> 
