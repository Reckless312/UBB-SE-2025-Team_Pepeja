<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="News.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:News"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    Title="Steam-Community">

    <Grid Background="#FFF0F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar with Create Post Button and Search -->
        <Grid Grid.Row="0" Padding="16,8" Background="#FFC2D9">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Create Post Button -->
            <Button 
                x:Name="CreatePostButton" 
                Grid.Column="0" 
                Content="Create Post"
                Background="#D94C8A"
                Foreground="White"
                Padding="12,8"
                CornerRadius="20"
                Visibility="Visible"
                Click="CreatePostButton_Click">
            </Button>

            <!-- Search Bar -->
            <TextBox 
                Grid.Column="2"
                x:Name="SearchBox"
                PlaceholderText="Search news..."
                Width="300"
                HorizontalAlignment="Right"
                Margin="0,0,8,0"
                KeyDown="SearchBox_KeyDown"
                Background="#FFACC7"
                Foreground="#333333"
                BorderBrush="#FF6B97"
                BorderThickness="2"
                CornerRadius="20"/>
        </Grid>

        <!-- Posts Grid -->
        <ScrollViewer Grid.Row="1"
                      Name="PostsScroller"
                      ViewChanged="PostsScroller_ViewChanged"
                      VerticalScrollBarVisibility="Auto"
                      ZoomMode="Disabled"
                      Background="#FFF0F5">
            <Grid x:Name="PostsGrid" 
                  Padding="32,16"
                  ColumnSpacing="16"
                  RowSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
            </Grid>
        </ScrollViewer>
        
        <!-- Overlay for Post Control -->
        <Grid x:Name="OverlayContainer" 
              Grid.Row="0" 
              Grid.RowSpan="2" 
              Visibility="Collapsed">

            <!-- Semi-transparent background -->
            <Rectangle Fill="#E6FFE6F0" 
                       Stretch="Fill"
                       PointerPressed="OverlayBackground_PointerPressed"/>

            <!-- Post Control -->
            <local:PostControl x:Name="PostControl" 
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"/>
        </Grid>

        <!-- Overlay for Post Editor Panel -->
        <Grid x:Name="EditorOverlayContainer" 
              Grid.Row="0" 
              Grid.RowSpan="2" 
              Visibility="Collapsed">

            <!-- Semi-transparent background -->
            <Rectangle Fill="#E6FFE6F0" 
                       Stretch="Fill"/>

            <!-- Post Editor Panel -->
            <local:PostEditorControl x:Name="PostEditorPanel" 
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"/>
        </Grid>
    </Grid>
</Window>
