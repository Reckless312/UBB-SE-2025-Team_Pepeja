<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FriendRequests.SearchUsersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#ee4fc5" Padding="10">
        <StackPanel>
            <!-- Search Box -->
            <Border Background="#ff86e0" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBox PlaceholderText="Search by username..." Width="300" Margin="0,0,10,0"/>
                    <Button Content="Search" Width="100" Background="#fc93e8" Foreground="Black"/>
                </StackPanel>
            </Border>

            <!-- Search Results -->
            <Border Background="#ff86e0" CornerRadius="5" Padding="15">
                <StackPanel>
                    <!-- Result 1 -->
                    <Border Background="#fc93e8" CornerRadius="3" Padding="10" Margin="0,0,0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="/Assets/user3.png" Width="50" Height="50" Margin="0,0,10,0"/>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="MagicFan42" FontWeight="Bold"/>
                                <TextBlock Text="3 mutual friends" Foreground="#666666"/>
                            </StackPanel>

                            <Button Grid.Column="2" Content="Add Friend" Width="120" Background="#fc93e8" Foreground="Black"/>
                        </Grid>
                    </Border>

                    <!-- Result 2 -->
                    <Border Background="#fc93e8" CornerRadius="3" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="/Assets/user4.png" Width="50" Height="50" Margin="0,0,10,0"/>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="CyberExplorer" FontWeight="Bold"/>
                                <TextBlock Text="1 mutual friend" Foreground="#666666"/>
                            </StackPanel>

                            <Button Grid.Column="2" Content="Add Friend" Width="120" Background="#fc93e8" Foreground="Black"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
