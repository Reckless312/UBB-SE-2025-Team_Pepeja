<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FriendRequests.FriendsListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Background="#ee4fc5" Padding="10">
        <StackPanel>
            <!-- Friends Count -->
            <Border Background="#ff86e0" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <TextBlock Text="42 Friends" FontSize="16" FontWeight="Bold"/>
            </Border>

            <!-- Friends List -->
            <Border Background="#ff86e0" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <!-- Friend 1 -->
                    <Border Background="#fc93e8" CornerRadius="3" Padding="10" Margin="0,0,0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="/Assets/user1.png" Width="50" Height="50" Margin="0,0,10,0"/>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="GameMaster99" FontWeight="Bold"/>
                                <TextBlock Text="Online - Playing Elden Ring" Foreground="#666666"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Content="Message" Width="100" Background="#fc93e8" Foreground="Black" Margin="0,0,5,0"/>
                                <Button Content="Remove" Width="100" Background="#F44336" Foreground="White"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Friend 2 -->
                    <Border Background="#fc93e8" CornerRadius="3" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="/Assets/user2.png" Width="50" Height="50" Margin="0,0,10,0"/>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="SoulsVeteran" FontWeight="Bold"/>
                                <TextBlock Text="Online - Last seen 2h ago" Foreground="#666666"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Content="Message" Width="100" Background="#fc93e8" Foreground="Black" Margin="0,0,5,0"/>
                                <Button Content="Remove" Width="100" Background="#F44336" Foreground="White"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
