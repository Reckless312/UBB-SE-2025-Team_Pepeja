<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Search.SearchWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Search"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Search">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/SearchBackground.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="15" Background="#22000000">
            <TextBlock Text="Search" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="Black"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <Grid Grid.Column="0" Margin="10">
                <Border CornerRadius="5" Background="#40000000" Padding="10">
                    <StackPanel Margin="10">
                        <Border CornerRadius="5" Padding="10" Background="#60000000">
                            <!-- Search Controls -->
                            <StackPanel Margin="0,0,0,20">
                                <!-- Search Row -->
                                <Grid VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox PlaceholderText="Enter username..." 
                                             Background="#40000000" 
                                             Foreground="White"
                                             Padding="10"
                                             Height="40"
                                             BorderThickness="0"
                                             Name="InputBox"/>
                                    <Button Grid.Column="1" 
                                            Content="Search" 
                                            Margin="5,0,0,0" 
                                            Background="Black" 
                                            Foreground="White"
                                            Padding="15,5"
                                            Height="40"
                                            BorderThickness="0"
                                            CornerRadius="3"
                                            Click="SearchButton_Click"/>
                                </Grid>

                                <!-- Sort Row -->
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Sort" 
                                               VerticalAlignment="Center" 
                                               Foreground="Black"
                                               Margin="0,0,10,0"/>
                                    <StackPanel Grid.Column="1" 
                                                Orientation="Horizontal" 
                                                HorizontalAlignment="Right">
                                        <Button Content="A-Z" 
                                                Width="80" 
                                                Background="Black"
                                                Foreground="White"
                                                Margin="0,0,5,0"
                                                BorderThickness="0"
                                                CornerRadius="3"/>
                                        <Button Content="Z-A" 
                                                Width="80" 
                                                Background="Black" 
                                                Foreground="White"
                                                BorderThickness="0"
                                                CornerRadius="3"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Friend Requests -->
                        <Border CornerRadius="5" Padding="10" Background="#60000000" Margin="0,20,0,0">
                            <StackPanel>
                                <!-- Header row with Refresh button -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Friend Requests" 
                                                    FontWeight="Bold" 
                                                    Foreground="Black"
                                                    VerticalAlignment="Center"/>
                                    <Button Content="Refresh" 
                                                    Grid.Column="1"
                                                    Background="Black" 
                                                    Foreground="White"
                                                    Padding="10,5"
                                                    BorderThickness="0"
                                                    CornerRadius="3"
                                                    Click="RefreshChatInvitesButton_Click"/>
                                </Grid>

                                <ScrollViewer MaxHeight="200">
                                    <!-- Friend request items will be displayed here -->
                                    <StackPanel>
                                        <ItemsControl ItemsSource="{x:Bind chatInvitesFromUsers, Mode=OneWay}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate x:DataType="local:User">
                                                    <Border Background="#60000000" 
                                                                        CornerRadius="3" 
                                                                        Padding="10" 
                                                                        Margin="0,0,0,10">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Text="{x:Bind UserName}"
                                                                       Foreground="White"
                                                                       VerticalAlignment="Center"
                                                                       Margin="10,0,0,0"
                                                                       Grid.Column="1"/>
                                                            <StackPanel Orientation="Horizontal" 
                                                                        Grid.Column="2"
                                                                        VerticalAlignment="Center">
                                                                <Button Content="Accept" 
                                                                                Background="Black" 
                                                                                Foreground="White"
                                                                                Padding="10,5"
                                                                                Margin="0,0,5,0"
                                                                                BorderThickness="0"
                                                                                CornerRadius="3"
                                                                                Tag="{x:Bind}"
                                                                                Click="AcceptFriendRequestButton_Click"/>
                                                                <Button Content="Decline" 
                                                                                Background="Black" 
                                                                                Foreground="White"
                                                                                Padding="10,5"
                                                                                BorderThickness="0"
                                                                                CornerRadius="3"
                                                                                Tag="{x:Bind}"
                                                                                Click="DeclineFriendRequestButton_Click"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>

                        <!-- Chat Invites -->
                        <Border CornerRadius="5" Padding="10" Background="#60000000" Margin="0,20,0,0">
                            <StackPanel>
                                <!-- Header row with Refresh button -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Chat Invites" 
                                                    FontWeight="Bold" 
                                                    Foreground="Black"
                                                    VerticalAlignment="Center"/>
                                    <Button Content="Refresh" 
                                                    Grid.Column="1"
                                                    Background="Black" 
                                                    Foreground="White"
                                                    Padding="10,5"
                                                    BorderThickness="0"
                                                    CornerRadius="3"
                                                    Click="RefreshChatInvitesButton_Click"/>
                                </Grid>

                                <ScrollViewer MaxHeight="200">
                                    <!-- Chat invite items will be displayed here -->
                                    <StackPanel>
                                        <ItemsControl ItemsSource="{x:Bind friendRequestsFromUsers, Mode=OneWay}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate x:DataType="local:User">
                                                    <Border Background="#60000000" 
                                                            CornerRadius="3" 
                                                            Padding="10" 
                                                            Margin="0,0,0,10">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Text="{x:Bind UserName}"
                                                                       Foreground="White"
                                                                       VerticalAlignment="Center"
                                                                       Margin="10,0,0,0"
                                                                       Grid.Column="1"/>
                                                            <StackPanel Orientation="Horizontal" 
                                                                        Grid.Column="2"
                                                                        VerticalAlignment="Center"> 
                                                                <Button Content="Accept" 
                                                                        Background="Black" 
                                                                        Foreground="White"
                                                                        Padding="10,5"
                                                                        Margin="0,0,5,0"
                                                                        BorderThickness="0"
                                                                        CornerRadius="3"
                                                                        Tag="{x:Bind}"
                                                                        Click="AcceptChatInviteButton_Click"/>
                                                                <Button Content="Decline" 
                                                                        Background="Black" 
                                                                        Foreground="White"
                                                                        Padding="10,5"
                                                                        BorderThickness="0"
                                                                        CornerRadius="3"
                                                                        Tag="{x:Bind}"
                                                                        Click="DeclineChatInviteButton_Click"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Right Panel - Search Results -->
            <Grid Grid.Column="1" Margin="10">
                <Border CornerRadius="5" Background="#40000000" Padding="10">
                    <ScrollViewer>
                        <StackPanel>
                            <TextBlock Text="Search Results" 
                                            FontSize="20" 
                                            FontWeight="Bold" 
                                            Foreground="Black"
                                            Margin="0,0,0,10"/>
                            <ItemsControl ItemsSource="{x:Bind displayedUsers, Mode=OneWay}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="local:User">
                                        <Border Background="#60000000" 
                                                CornerRadius="3" 
                                                Padding="10" 
                                                Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{x:Bind UserName}" 
                                                           Foreground="White"
                                                           VerticalAlignment="Center"
                                                           Margin="10,0,0,0"
                                                           Grid.Column="1"/>
                                                <StackPanel Orientation="Horizontal" 
                                                            Grid.Column="2"
                                                            VerticalAlignment="Center">
                                                    <Button Content="Invite to Chat" 
                                                            Background="Black" 
                                                            Foreground="White"
                                                            Padding="10,5"
                                                            Margin="0,0,5,0"
                                                            BorderThickness="0"
                                                            CornerRadius="3"
                                                            Click="MessageButton_Click"
                                                            Tag="{x:Bind}"/>
                                                    <Button Background="Black" 
                                                            Foreground="White"
                                                            Padding="10,5"
                                                            BorderThickness="0"
                                                            CornerRadius="3"
                                                            Click="SendFriendRequestButton_Click"
                                                            Content="{x:Bind GetFriendButtonText(FriendshipStatus), Mode=OneWay}"
                                                            Tag="{x:Bind}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>