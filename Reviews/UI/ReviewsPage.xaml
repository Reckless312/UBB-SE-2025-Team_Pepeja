<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Reviews.ReviewsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Reviews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Padding="10" Background="#ee4fc5">
            <TextBlock Text="Game Reviews :3" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="Back to Game" Margin="20,0,0,0" Width="120" Background="#ff86e0" Foreground="Black"/>
            <TextBlock Text="Elden Ring" FontSize="18" Margin="20,0,0,0" VerticalAlignment="Center" FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" Background="#ee4fc5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Review Statistics Panel -->
            <StackPanel Grid.Column="0" Padding="10">
                <Border Background="#ff86e0" CornerRadius="5" Padding="10" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Review Statistics" FontWeight="Bold" Margin="0,0,0,10" FontSize="16"/>

                        <!-- Overall Rating -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="★" FontSize="24" Foreground="#FFD700"/>
                            <TextBlock Text="4.7" FontSize="24" FontWeight="Bold" Margin="5,0,0,0"/>
                            <TextBlock Text="/ 5.0" FontSize="18" VerticalAlignment="Bottom" Margin="2,0,0,3"/>
                        </StackPanel>

                        <!-- Rating Breakdown -->
                        <ProgressBar Value="80" Maximum="100" Height="15" Margin="0,5,0,0" Foreground="#4CAF50">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="5 Stars (80%)"/>
                            </ToolTipService.ToolTip>
                        </ProgressBar>
                        <ProgressBar Value="15" Maximum="100" Height="15" Margin="0,5,0,0" Foreground="#8BC34A">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="4 Stars (15%)"/>
                            </ToolTipService.ToolTip>
                        </ProgressBar>
                        <ProgressBar Value="3" Maximum="100" Height="15" Margin="0,5,0,0" Foreground="#CDDC39">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="3 Stars (3%)"/>
                            </ToolTipService.ToolTip>
                        </ProgressBar>
                        <ProgressBar Value="1" Maximum="100" Height="15" Margin="0,5,0,0" Foreground="#FFC107">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="2 Stars (1%)"/>
                            </ToolTipService.ToolTip>
                        </ProgressBar>
                        <ProgressBar Value="1" Maximum="100" Height="15" Margin="0,5,0,0" Foreground="#FF9800">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="1 Star (1%)"/>
                            </ToolTipService.ToolTip>
                        </ProgressBar>

                        <!-- Stats -->
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="Total Reviews: 1,243" Margin="0,0,0,5"/>
                            <TextBlock Text="Positive: 95%" Margin="0,0,0,5"/>
                            <TextBlock Text="Your Play Time: 87.5 hours" Margin="0,0,0,5"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Write Review -->
                <Border Background="#ff86e0" CornerRadius="5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Write a Review" FontWeight="Bold" Margin="0,0,0,10" FontSize="16"/>

                        <!-- Rating -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Rating:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox Width="100" SelectedIndex="4">
                                <ComboBoxItem Content="1.0 ★"/>
                                <ComboBoxItem Content="2.0 ★★"/>
                                <ComboBoxItem Content="3.0 ★★★"/>
                                <ComboBoxItem Content="4.0 ★★★★"/>
                                <ComboBoxItem Content="5.0 ★★★★★"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Recommendation -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Recommend:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ToggleButton Content="Yes" Width="80" IsChecked="True" Background="#fc93e8" Foreground="White"/>
                            <ToggleButton Content="No" Width="80" Margin="5,0,0,0" Background="#fc93e8" Foreground="White"/>
                        </StackPanel>

                        <!-- Title -->
                        <TextBox PlaceholderText="Title (3-20 chars)" Margin="0,0,0,10" MaxLength="20"/>

                        <!-- Review -->
                        <TextBox PlaceholderText="Your review (30-100 chars)" 
                                Margin="0,0,0,10" 
                                MaxLength="100" 
                                AcceptsReturn="True" 
                                TextWrapping="Wrap" 
                                Height="100"/>

                        <Button Content="Submit Review" Background="#fc93e8" Foreground="Black"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Reviews List -->
            <ScrollViewer Grid.Column="1" Padding="10">
                <StackPanel>
                    <!-- Filter Controls -->
                    <Border Background="#ff86e0" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox Width="150" SelectedIndex="0" Margin="0,0,10,0">
                                <ComboBoxItem Content="All Reviews"/>
                                <ComboBoxItem Content="Positive Only"/>
                                <ComboBoxItem Content="Negative Only"/>
                            </ComboBox>

                            <TextBlock Text="Sort:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                            <ComboBox Width="150" SelectedIndex="0">
                                <ComboBoxItem Content="Newest First"/>
                                <ComboBoxItem Content="Oldest First"/>
                                <ComboBoxItem Content="Highest Rated"/>
                                <ComboBoxItem Content="Most Helpful"/>
                            </ComboBox>

                            <TextBlock Text="Time:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                            <ComboBox Width="120" SelectedIndex="0">
                                <ComboBoxItem Content="All Time"/>
                                <ComboBoxItem Content="Last 30 Days"/>
                                <ComboBoxItem Content="Last 6 Months"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- Review 1 -->
                    <Border Background="#ff86e0" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/user1.png" Width="40" Height="40" Margin="0,0,10,0"/>
                                <StackPanel>
                                    <TextBlock Text="GameMaster99" FontWeight="Bold"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="★ ★ ★ ★ ★" Foreground="#FFD700" FontWeight="Bold"/>
                                        <TextBlock Text=" (5.0)" Margin="5,0,0,0"/>
                                        <TextBlock Text=" • Recommended" Margin="10,0,0,0" Foreground="#df37d6" FontWeight="Bold"/>
                                        <TextBlock Text=" • 120 hours" Margin="10,0,0,0" Foreground="#666666"/>
                                        <TextBlock Text=" • 2 days ago" Margin="10,0,0,0" Foreground="#666666"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                            <TextBlock Text="An absolute masterpiece" FontSize="16" FontWeight="Bold" Margin="0,10,0,0"/>
                            <TextBlock Text="Elden Ring redefines what an open world game can be. The combat is tight, the world is massive and full of secrets, and the lore is deep and rewarding to uncover. FromSoftware has outdone themselves with this one." 
                                       Margin="0,5,0,0" TextWrapping="Wrap"/>

                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <Button Content="Helpful (124)" Background="Transparent" BorderThickness="0" Foreground="#666666"/>
                                <Button Content="Funny (32)" Background="Transparent" BorderThickness="0" Foreground="#666666" Margin="10,0,0,0"/>
                                <Button Content="Edit" Background="Transparent" BorderThickness="0" Foreground="#666666" Margin="10,0,0,0" HorizontalAlignment="Right"/>
                                <Button Content="Delete" Background="Transparent" BorderThickness="0" Foreground="#666666" Margin="5,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Review 2 -->
                    <Border Background="#ff86e0" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/user2.png" Width="40" Height="40" Margin="0,0,10,0"/>
                                <StackPanel>
                                    <TextBlock Text="SoulsVeteran" FontWeight="Bold"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="★ ★ ★ ★ ☆" Foreground="#FFD700" FontWeight="Bold"/>
                                        <TextBlock Text=" (4.0)" Margin="5,0,0,0"/>
                                        <TextBlock Text=" • Recommended" Margin="10,0,0,0" Foreground="#df37d6" FontWeight="Bold"/>
                                        <TextBlock Text=" • 85 hours" Margin="10,0,0,0" Foreground="#666666"/>
                                        <TextBlock Text=" • 1 week ago" Margin="10,0,0,0" Foreground="#666666"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                            <TextBlock Text="Almost perfect" FontSize="16" FontWeight="Bold" Margin="0,10,0,0"/>
                            <TextBlock Text="The open world is incredible and the combat is as good as ever. My only complaint is that some late-game areas feel unbalanced compared to the rest of the game. Still one of the best games I've played this year." 
                                       Margin="0,5,0,0" TextWrapping="Wrap"/>

                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <Button Content="Helpful (87)" Background="Transparent" BorderThickness="0" Foreground="#666666"/>
                                <Button Content="Funny (12)" Background="Transparent" BorderThickness="0" Foreground="#666666" Margin="10,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Review 3 -->
                    <Border Background="#ff86e0" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/user3.png" Width="40" Height="40" Margin="0,0,10,0"/>
                                <StackPanel>
                                    <TextBlock Text="MagicFan42" FontWeight="Bold"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="★ ☆ ☆ ☆ ☆" Foreground="#FFD700" FontWeight="Bold"/>
                                        <TextBlock Text=" (1.0)" Margin="5,0,0,0"/>
                                        <TextBlock Text=" • Not Recommended" Margin="10,0,0,0" Foreground="#df37d6" FontWeight="Bold"/>
                                        <TextBlock Text=" • 15 hours" Margin="10,0,0,0" Foreground="#666666"/>
                                        <TextBlock Text=" • 3 weeks ago" Margin="10,0,0,0" Foreground="#666666"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                            <TextBlock Text="Too difficult for me" FontSize="16" FontWeight="Bold" Margin="0,10,0,0"/>
                            <TextBlock Text="I wanted to like this game but it's just too hard. I keep dying over and over and making no progress. Maybe it's just not for casual players like me. The graphics are nice though." 
                                       Margin="0,5,0,0" TextWrapping="Wrap"/>

                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <Button Content="Helpful (5)" Background="Transparent" BorderThickness="0" Foreground="#666666"/>
                                <Button Content="Funny (42)" Background="Transparent" BorderThickness="0" Foreground="#666666" Margin="10,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
